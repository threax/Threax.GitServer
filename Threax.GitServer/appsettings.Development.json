{
  "$schema": "./appsettings.schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AppConfig": {
    "ConnectionString": "Data Source=../../DevData/gitserver/Threax.GitServer.db;",
    "RepoBaseDir": "../SshHost/repo",
    "AuthorizedKeysPath": "../SshHost/config/.ssh/authorized_keys",
    "ClonePathFormat": "ssh://threax@127.0.0.1:2222/repo/{0}",
    "UseAssetBundles": false,
    "AllowApiExplorer": true,
    "DetailedErrors": true,
    "AddUserSecrets": true
  },
  "CertManager": {
    "LoadCerts": false
  },
  "JwtAuth": {
    "Authority": "https://localhost:44390/"
  },
  "IdServerClient": {
    "ServiceUrl": "https://localhost:44390/api"
  },
  "SharedClientCredentials": {
    "IdServerHost": "https://localhost:44390/"
  }
}
