{
    "Build": {
        "ImageName": "threax/git-ssh-server",
        "Dockerfile": "Dockerfile",
        "PullAllImages": true
    },
    "Deploy": {
        "Name": "git-ssh-server",
        "User": 30010,
        "Group": 30010,
        "Environment": {
            "StrictModes": "yes"
        },
        "Volumes": {
            "repo": {
                "Source": "repo",
                "Destination": "/repo"
            },
            "ssh-keys": {
                "Source": "ssh-keys",
                "Destination": "/etc/ssh"
            },
            "ssh": {
                "Source": ".ssh",
                "Destination": "/home/threax/.ssh"
            }
        },
        "InitCommand": "ssh-keygen -A",
        "AutoMountAppSettings": false,
        "Ports": [
            "2222:2222"
        ]
    }
}